<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_motor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:text="Motor Kontrol"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_motor_status"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_motor_kapali"
        app:layout_constraintEnd_toEndOf="@+id/tv_motor_label"
        app:layout_constraintStart_toStartOf="@+id/tv_motor_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_motor_label" />

    <Button
        android:id="@+id/btn_motor_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:text="Aç"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_motor_status" />

    <Button
        android:id="@+id/btn_motor_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Kapat"
        app:layout_constraintBottom_toBottomOf="@+id/btn_motor_on"
        app:layout_constraintEnd_toEndOf="@+id/iv_motor_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_motor_on"
        app:layout_constraintTop_toTopOf="@+id/btn_motor_on" />

    <TextView
        android:id="@+id/tv_valve_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Valf Kontrol"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_motor_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_motor_label" />

    <ImageView
        android:id="@+id/iv_valve_status"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_valve_kapali"
        app:layout_constraintBottom_toBottomOf="@+id/iv_motor_status"
        app:layout_constraintEnd_toEndOf="@+id/tv_valve_label"
        app:layout_constraintStart_toStartOf="@+id/tv_valve_label"
        app:layout_constraintTop_toTopOf="@+id/iv_motor_status" />

    <Button
        android:id="@+id/btn_valve_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:enabled="false"
        android:text="Aç"
        app:layout_constraintBottom_toBottomOf="@+id/btn_motor_off"
        app:layout_constraintEnd_toStartOf="@+id/btn_valve_close"
        app:layout_constraintStart_toEndOf="@+id/btn_motor_off"
        app:layout_constraintTop_toTopOf="@+id/btn_motor_off"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_valve_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:enabled="false"
        android:text="Kapat"
        app:layout_constraintBottom_toBottomOf="@+id/btn_valve_open"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_valve_open"
        app:layout_constraintTop_toTopOf="@+id/btn_valve_open" />

    <TextView
        android:id="@+id/tv_level1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pb_level1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_valve_open" />

    <SeekBar
        android:id="@+id/pb_level1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_motor_off" />

    <TextView
        android:id="@+id/tv_level2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pb_level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_level1" />

    <SeekBar
        android:id="@+id/pb_level2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:max="10"
        android:progress="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_level1" />

</androidx.constraintlayout.widget.ConstraintLayout>